{
  "name": "genomics-in-healthcare-website",
  "version": "1.0.0",
  "type": "module",
  "description": "Genomics and AI in Healthcare Lab website - React version with testing",
  "main": "index.js",
  "exports": {
    "./ui": "./src/components/ui/index.js"
  },
  "scripts": {
    "dev": "node scripts/use-dev-index.js && vite",
    "build": "npm run extract-publications && npm run convert-members && npm run convert-posts && vite build && npm run copy-404 && node scripts/sync-dist.js",
    "extract-publications": "node scripts/extract-publications.mjs",
    "copy-404": "powershell -Command \"Copy-Item -Path './404.html' -Destination './dist/404.html'\"",
    "preview": "vite preview",
    "deploy": "npm run build && gh-pages -d dist",
    "convert-members": "node scripts/convert-members.js",
    "convert-posts": "node scripts/convert-posts.js",
    "test": "playwright test",
    "test:prod": "playwright test --config=playwright.config.production.js",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:report": "playwright show-report",
    "test:install": "playwright install",
    "test:update": "playwright test --update-snapshots",
    "test:smoke": "playwright test --grep @smoke",
    "test:smoke:prod": "playwright test --config=playwright.config.production.js --grep @smoke",
    "test:regression": "playwright test --grep @regression",
    "test:performance": "playwright test --grep @performance",
    "test:unit": "vitest",
    "test:unit:ui": "vitest --ui",
    "test:unit:coverage": "vitest --coverage",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "keywords": [
    "react",
    "vite",
    "genomics",
    "healthcare",
    "website",
    "playwright",
    "testing"
  ],
  "author": "Genomics and AI in Healthcare Lab",
  "license": "MIT",
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.0",
    "react-markdown": "^9.0.1",
    "remark-gfm": "^4.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@storybook/addon-essentials": "^7.6.0",
    "@storybook/addon-interactions": "^7.6.0",
    "@storybook/addon-links": "^7.6.0",
    "@storybook/blocks": "^7.6.0",
    "@storybook/react": "^7.6.0",
    "@storybook/react-vite": "^7.6.0",
    "@storybook/test": "^7.6.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "gh-pages": "^6.1.0",
    "storybook": "^7.6.0",
    "typescript": "^5.3.3",
    "vitest": "^1.0.0",
    "@testing-library/react": "^14.1.0",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/user-event": "^14.5.0",
    "jsdom": "^23.0.0",
    "vite": "^5.0.8"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
