{
  "name": "genomics-in-healthcare-website",
  "version": "1.0.0",
  "type": "module",
  "description": "Genomics and AI in Healthcare Lab website - React version",
  "main": "index.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "deploy": "npm run build && gh-pages -d dist",
    "test": "playwright test",
    "test:prod": "playwright test --config=playwright.config.production.js",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:report": "playwright show-report",
    "test:install": "playwright install",
    "test:update": "playwright test --update-snapshots",
    "test:smoke": "playwright test --grep @smoke",
    "test:smoke:prod": "playwright test --config=playwright.config.production.js --grep @smoke",
    "test:regression": "playwright test --grep @regression",
    "test:performance": "playwright test --grep @performance",
    "start:jekyll": "wsl -e bash -c \"cd /mnt/d/documents/genomics-in-healthcare.github.io && bundle exec jekyll serve --force_polling --host 0.0.0.0 --port 4000\""
  },
  "keywords": [
    "react",
    "vite",
    "genomics",
    "healthcare",
    "website",
    "playwright",
    "testing"
  ],
  "author": "Genomics and AI in Healthcare Lab",
  "license": "MIT",
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.0",
    "react-markdown": "^9.0.1",
    "remark-gfm": "^4.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "vite": "^5.0.8",
    "gh-pages": "^6.1.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
